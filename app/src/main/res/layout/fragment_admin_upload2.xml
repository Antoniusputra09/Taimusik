<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_upload2"
    android:background="@drawable/background_biodata3">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/layout_admin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pil1"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:src="@drawable/atas_admin" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </RelativeLayout>

        <GridLayout

            android:id="@+id/grid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layout_admin1">

            <RelativeLayout
                android:id="@+id/layout_admin2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/layout_admin1"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="30dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#e71a1817"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <TextView
                        android:id="@+id/pil2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Musik"
                        android:textSize="17sp" />

                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_admin3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardBackgroundColor="#e71a1817"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">


                    <TextView
                        android:id="@+id/pil3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Chord"
                        android:textSize="17sp" />


                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_admin4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_margin="17dp">

                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardBackgroundColor="#e71a1817"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">


                    <TextView
                        android:id="@+id/pil4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Kategori"
                        android:textSize="17sp" />


                </android.support.v7.widget.CardView>

            </RelativeLayout>



        </GridLayout>

        <GridLayout
            android:id="@+id/grid2"
            android:layout_below="@id/grid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/layout_admin5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="7dp"
                android:layout_margin="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardBackgroundColor="#e71a1817"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">


                    <TextView
                        android:id="@+id/pil5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Band"
                        android:textSize="17sp" />


                </android.support.v7.widget.CardView>

            </RelativeLayout>




        </GridLayout>




    </RelativeLayout>


</FrameLayout>