<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daftarlirik"
    android:background="@drawable/background_biodata3">

    <RelativeLayout
        android:id="@+id/layout36"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp">



        <TextView
            android:id="@+id/tampilband"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="Slank"
            android:textSize="43dp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout37"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/Snow"
        android:layout_below="@id/layout36"
        android:orientation="horizontal">

    </LinearLayout>


      <RelativeLayout
        android:layout_below="@id/layout37"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/play1"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#85464645">


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcyband2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>




</RelativeLayout>