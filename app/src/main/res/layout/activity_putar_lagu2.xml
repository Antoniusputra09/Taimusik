<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".putar_lagu2"
    android:background="@drawable/background_biodata3">

    <ImageView
        android:id="@+id/kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tombol_back"/>

    <RelativeLayout
        android:id="@+id/layout30"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gambarartis"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/slank" />

        <TextView
            android:id="@+id/jodol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/seekBar2"
            android:layout_toRightOf="@id/gambarartis"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="15dp"
            android:text="Ku Tak Bisa"
            android:textSize="30sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar2"
            android:layout_toRightOf="@id/gambarartis"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp">

            <ImageView
                android:id="@+id/tombolpaused2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/play_icon"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/tombolnext2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/tombolpaused2"
                app:srcCompat="@drawable/percepat"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/tombolprevious2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/tombolnext2"
                app:srcCompat="@drawable/perlambat"
                tools:ignore="VectorDrawableCompat" />
            <ImageView
                android:id="@+id/tomboldownload2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/tombolprevious2"
                android:src="@drawable/download_icon"/>


        </RelativeLayout>




        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gambarartis"
            android:layout_marginStart="25dp"
            android:layout_centerVertical="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout30">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#000"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/lirik2"
                    android:inputType="text|textMultiLine"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
